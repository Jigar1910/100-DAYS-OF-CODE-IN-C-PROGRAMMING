//Check if a string is a palindrome
#include <stdio.h>

int main() {
    char str[100];
    int i = 0, j, isPalindrome = 1;

    printf("Enter a string: ");
    gets(str);  // Simple input

    // Find length
    while (str[i] != '\0') {
        i++;
    }
    j = i - 1;  // Last index
    i = 0;      // Start index

    // Check palindrome
    while (i < j) {
        if (str[i] != str[j]) {
            isPalindrome = 0;
            break;
        }
        i++;
        j--;
    }

    if (isPalindrome) {

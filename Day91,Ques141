//Define a structure Student with name, roll_no, and marks, then read and print one student's data.
#include <stdio.h>

// Define the structure
typedef struct {
    char name[50];
    int roll_no;
    float marks;
} Student;

int main() {
    Student s1;

    // Read student's data
    printf("Enter name: ");
    fgets(s1.name, sizeof(s1.name), stdin);  // safer than scanf for strings

    printf("Enter roll number: ");
    scanf("%d", &s1.roll_no);

    printf("Enter marks: ");
    scanf("%f", &s1.marks);

    // Print student's data
    printf("\nStudent Details:\n");
    printf("Name: %s", s1.name);  // fgets includes newline
    printf("Roll Number: %d\n", s1.roll_no);
    printf("Marks: %.2f\n", s1.marks);

    return 0;
}

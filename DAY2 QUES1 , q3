// Write a program to calculate the area and perimeter of a rectangle given its length and breadth. 
#include <stdio.h>

int main() {
    int l,b;
    printf("Enter the values of length and breadth:");
    scanf("%d%d",&l,&b);
    int peri=2*(l+b);
    printf("The perimeter of rectangle is:%d",peri);
    int area=l*b;
    printf("\nThe area of rectangle is:%d",area);
    

    return 0;
}

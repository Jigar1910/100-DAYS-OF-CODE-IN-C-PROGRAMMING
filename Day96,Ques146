//Create Employee structure with nested Date structure for joining date and print details.
#include <stdio.h>
typedef enum {
    MANAGER,
    DEVELOPER,
    HR,
    INTERN
} EmpType;
typedef struct {
    int day;
    int month;
    int year;
} Date;

typedef struct {
    char name[50];
    int emp_id;
    float salary;
    EmpType type;     
    Date joining_date; 
} Employee;


void printEmployee(Employee e) {
    printf("Name: %s\n", e.name);
    printf("Employee ID: %d\n", e.emp_id);
    printf("Salary: %.2f\n", e.salary);

    printf("Employee Type: ");
    switch(e.type) {
        case MANAGER:   printf("Manager\n"); break;
        case DEVELOPER: printf("Developer\n"); break;
        case HR:        printf("HR\n"); break;
        case INTERN:    printf("Intern\n"); break;
        default:        printf("Unknown\n");
    }

    printf("Joining Date: %02d-%02d-%04d\n", e.joining_date.day, e.joining_date.month, e.joining_date.year);
}

int main() {
    Employee emp;

    
    printf("Enter employee name: ");
    fgets(emp.name, sizeof(emp.name), stdin);

    printf("Enter employee ID: ");
    scanf("%d", &emp.emp_id);

    printf("Enter salary: ");
    scanf("%f", &emp.salary);

    int t;
    printf("Enter employee type (0=Manager, 1=Developer, 2=HR, 3=Intern): ");
    scanf("%d", &t);
    emp.type = (EmpType)t;

    printf("Enter joining date (day month year): ");
    scanf("%d %d %d", &emp.joining_date.day, &emp.joining_date.month, &emp.joining_date.year);

    
    printf("\nEmployee Details:\n");
    printEmployee(emp);

    return 0;
}

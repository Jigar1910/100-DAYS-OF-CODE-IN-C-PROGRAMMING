// Write a program to input a year and check whether it is a leap year or not using conditional statements.

// Online C compiler to run C program online
#include <stdio.h>

int main() {
    int year;
    printf("Enter the year:");
    scanf("%d",&year);
    if(year%100==0)
    {
        if(year%400==0)
        {
            printf("Leap year");
        }
        else
        {
            printf("Not a leap year");
        }
    }
    else
    {
        if(year%4==0)
        {
            printf("Leap year");
        }
        else
        {
            printf("Not a leap year");
        }
    }
}

// WAP to find the product of odd digits of a number.
#include <stdio.h>

int main() {
    int num, digit;
    int product = 1;      
    int foundOdd = 0;     

    printf("Enter a number: ");
    scanf("%d", &num);

    if (num == 0) {
        printf("Product = 0\n");
        return 0;
    }

    while (num > 0) {
        digit = num % 10;

        if (digit % 2 != 0) {   
            product *= digit;
            foundOdd = 1;
        }


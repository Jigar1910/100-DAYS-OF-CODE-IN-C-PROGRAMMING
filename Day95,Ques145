//Return a structure containing top student's details from a function.
#include <stdio.h>

// Define enum for Gender
typedef enum {
    MALE,
    FEMALE,
    OTHER
} Gender;

// Define Student structure with enum
typedef struct {
    char name[50];
    int roll_no;
    float marks;
    Gender gender;
} Student;

// Function to find and return the top student
Student findTopStudent(Student students[], int n) {
    int i, max_index = 0;
    for(i = 1; i < n; i++) {
        if(students[i].marks > students[max_index].marks) {
            max_index = i;
        }
    }
    return students[max_index];
}

// Function to print a student's details
void printStudent(Student s) {
    printf("Name: %s", s.name);
    printf("Roll Number: %d\n", s.roll_no);
    printf("Marks: %.2f\n", s.marks);
    printf("Gender: ");
    switch(s.gender) {
        case MALE:   printf("Male\n"); break;
        case FEMALE: printf("Female\n"); break;
        case OTHER:  printf("Other\n"); break;
        default:     printf("Unknown\n");
    }
}

int main() {
    Student students[5];
    int i;

    // Read data for 5 students
    for(i = 0; i < 5; i++) {
        printf("Enter details for student %d:\n", i + 1);
        getchar(); // consume leftover newline
        printf("Name: ");
        fgets(students[i].name, sizeof(students[i].name), stdin);

        printf("Roll number: ");
        scanf("%d", &students[i].roll_no);

        printf("Marks: ");
        scanf("%f", &students[i].marks);

        int g;
        printf("Gender (0=Male, 1=Female, 2=Other): ");
        scanf("%d", &g);
        students[i].gender = (Gender)g;

        printf("\n");
    }

    // Get top student
    Student topStudent = findTopStudent(students, 5);

    // Print top student's details
    printf("Top Student Details:\n");
    printStudent(topStudent);

    return 0;
}

//print the initials of a name.

#include <stdio.h>
#include <string.h>

int main() {
    char name[100];
    int i;

    printf("Enter your full name: ");
    gets(name);

    // Print the first character of the first word
    if(name[0] != ' ')
        printf("%c", name[0]);

    // Loop through the string
    for(i = 0; name[i] != '\0'; i++) {
        // If a space is found, the next character is the initial of the next word
        if(name[i] == ' ' && name[i+1] != '\0' && name[i+1] != ' ')
            printf("%c", name[i+1]);
    }

    printf("\n");
    return 0;
}


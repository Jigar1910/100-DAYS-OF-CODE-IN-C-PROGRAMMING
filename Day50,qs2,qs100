// Print all sub-strings of a string.
#include <stdio.h>
#include <string.h>

int main() {
    char str[100];
    int i, j, len;

    printf("Enter a string: ");
    gets(str);

    len = strlen(str);

    printf("All substrings are:\n");
    for(i = 0; i < len; i++) {         // starting index
        for(j = 1; j <= len - i; j++) {  // length of substring
            int k;
            for(k = i; k < i + j; k++) {
                printf("%c", str[k]);
            }
            printf("\n");
        }
    }

    return 0;
}
